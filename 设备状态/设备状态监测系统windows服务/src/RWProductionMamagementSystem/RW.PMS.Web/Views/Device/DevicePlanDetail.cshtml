                    <div class="col-md-8">
                        <textarea rows="5" id="txtuddesc" class="form-control " style="resize:none;"></textarea>
                        @*<input id="txtuddesc" class="form-control" />*@
                    </div>
                </div>

                <div class="row form-group">
