        //row：父表当前行的Json数据对象
        //index：父表当前行的行索引
        function StatusFormatter(value, row, index) {
            var html = "";
            if (value == 0) {
                // bg-primary
                html = "<span class='badge LStyle' style='background-color:#337ab7;font-size:13px;'>" + row["pp_statusText"] + "</span>";
