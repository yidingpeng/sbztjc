                } else if (value == 8) {
                    //绿色
                    html = "<span class='badge LStyle' style='background-color:#68af35;' >" + row["pp_sort"] + "</span>";
                } else if (value == 9) {
                    //蓝色
                    html = "<span class='badge LStyle' style='background-color:#00b1ff;' >" + row["pp_sort"] + "</span>";
