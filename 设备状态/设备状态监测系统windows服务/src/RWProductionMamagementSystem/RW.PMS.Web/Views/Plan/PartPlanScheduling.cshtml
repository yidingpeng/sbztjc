            }
            return htm;
        }

        //排序号
        function sortFormatter(value, row, index) {
            var html = "";
            if (isDeNull(value)) {
                if (row.pp_status === 2) {
                    return;
                }
                if (value == 1) {
                    //深红
                    html = "<span class='badge LStyle' style='background-color:#a81849;font-size:15px;' >" + row["pp_sort"] + "</span>";
