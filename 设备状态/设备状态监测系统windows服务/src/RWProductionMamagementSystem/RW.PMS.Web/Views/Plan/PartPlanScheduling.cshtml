                    html = "<span class='badge LStyle' style='background-color:#ff7942;font-size:13px;' >" + row["pp_sort"] + "</span>";
                } else if (value == 4) {
                    //橙
                    html = "<span class='badge LStyle' style='background-color:#fc9802;font-size:12px;' >" + row["pp_sort"] + "</span>";
                } else if (value == 5) {
