<div class="row">
    <div class="col-md-12">
        <div class="box">
            <div class="box-body">
                <div class="well" style="padding-bottom:0px;padding-top:15px;">
                    <form role="search">

                        <div class="row">
                            <!-- 第一行内容 -->
                            <div class="col-sm-3">
                                <div class="form-auto-lg">
                                    <label class="form-label"><span class="red">*</span>系统单据编码:</label>
                                    <input id="txtOrderCode" class="form-control input-sm" disabled="disabled" placeholder="系统将自动生成编码" value="@ViewBag.PartPlan.pp_orderCode" />
                                    <input style="display:none;" value="隐藏文本框防止默认提交表单" />
                                    <input id="hidID" type="hidden" value="@ViewBag.PartPlan.pp_orderCode" />
                                </div>
                            </div>

                            <div class="col-sm-3">
                                <div class="form-auto-lg">
                                    <label class="form-label"><span class="red">*</span>第三方单据编码:</label>
                                    <input id="txtOrderCodeRel" class="form-control input-sm" disabled="disabled" placeholder="系统将自动获取第三方单据编码" value="@ViewBag.PartPlan.pp_orderCodeRel" />
                                    <input style="display:none;" value="隐藏文本框防止默认提交表单" />
                                </div>
                            </div>

                            <div class="col-sm-3">
                                <div class="form-auto-lg">
                                    <label class="form-label"><span class="red">*</span>库存组织编码:</label>
                                    <input id="txtStorageOrgUnit" class="form-control input-sm" value="@ViewBag.PartPlan.pp_storageOrgUnit" placeholder="请输入库存组织编码" autocomplete="off" />
                                    <input style="display:none;" value="隐藏文本框防止默认提交表单" />
                                </div>
                            </div>

                            <div class="col-sm-3">
                                <div class="form-auto-lg">
                                    <label class="form-label"><span class="red">*</span>事务类型编码:</label>
                                    <input id="txtTransactionType" class="form-control input-sm" value="@ViewBag.PartPlan.pp_transactionType" placeholder="请输入事务类型编码" autocomplete="off" />
                                    <input style="display:none;" value="隐藏文本框防止默认提交表单" />
                                </div>
                            </div>
                        </div><!-- 第一行内容 -->

                        <div class="row">
                            <!-- 第二行内容 -->
                            <div class="col-sm-3">
                                <div class="form-auto-lg">
                                    <label class="form-label" style="font-weight:bold;"><span class="red">*</span>物料编码(图号):</label>
                                    <!--HTML5 input+datalist IE9以下不支持-->
                                    <input id="txtProdModelName" list="hasProdModelInfo" class="form-control input-sm" placeholder="可选择或输入产品型号(图号)信息" value="@ViewBag.PartPlan.PmodelDrawingNo" autocomplete="off">
                                    <datalist id="hasProdModelInfo" style="max-height:150px;overflow:auto;">
                                        @if (ViewBag.ProductDrawingNoModelList != null)
                                        {
                                            foreach (RW.PMS.Model.BaseInfo.BaseProductModelModel item in ViewBag.ProductDrawingNoModelList)
                                            {
                                                //string strText = "";
                                            <option class="productItem" value="@item.PmodelDrawingNo" data-id="@item.ID" data-pid="@item.PID" data-pmodel="@item.Pmodel" data-drawingno="@item.DrawingNo"></option>
                                            }
                                        }
                                    </datalist>
                                    <input id="hidProdModelID" type="hidden" value="@ViewBag.PartPlan.PmodelDrawingNo" />
                                    <input id="hidDrawingNo" type="hidden" value="@ViewBag.PartPlan.PmodelDrawingNo" />
                                </div>
                            </div>



                            <div class="col-sm-3">
                                <div class="form-auto-lg">
                                    <label class="form-label"><span class="red">*</span>项目号编码:</label>
                                    <input id="txtProject" class="form-control input-sm" value="@ViewBag.PartPlan.pp_project" placeholder="请输入项目号编码" autocomplete="off" />
                                    <input style="display:none;" value="隐藏文本框防止默认提交表单" />
                                </div>
                            </div>


                            <div class="col-sm-3">
                                <div class="form-auto-lg">
                                    <label class="form-label"><span class="red">*</span>跟踪号编码:</label>
                                    <input id="txtTrackNumber" class="form-control input-sm" value="@ViewBag.PartPlan.pp_trackNumber" placeholder="请输入跟踪号编码" autocomplete="off" />
                                    <input style="display:none;" value="隐藏文本框防止默认提交表单" />
                                </div>
                            </div>

                            <div class="col-sm-3">
                                <div class="form-auto-lg">
                                    <label class="form-label" style="font-weight:bold;"><span class="red">*</span>计划数量: </label>
                                    <input id="txtPlanQty" class="form-control input-sm" placeholder="请输入计划数量" onkeyup="this.value=this.value.replace(/\D/g,'')" value="@ViewBag.PartPlan.pp_planQty" autocomplete="off" />
                                </div>
                            </div>

                        </div><!-- 第二行内容 -->

                        <div class="row">
                            <!-- 第三行内容 -->
                            <div class="col-sm-3">
                                <div class="form-auto-lg">
                                    <label class="form-label"><span class="red">*</span>计划开始时间: </label>
                                    <input id="txtStartTime" class="form-control input-sm" placeholder="请选择或输入计划开始日期" value="@ViewBag.PartPlan.pp_startDateText" autocomplete="off" />
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-auto-lg">
                                    <label class="form-label"><span class="red">*</span>计划结束时间: </label>
                                    <input id="txtEndTime" class="form-control input-sm" placeholder="请选择或输入计划结束日期" value="@ViewBag.PartPlan.pp_finishDateText" autocomplete="off" />
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-auto-lg">
                                    <label class="form-label"><span class="red">&nbsp;</span>参考信息: </label>
                                    <input id="txtDescription" class="form-control input-sm" placeholder="请输入参考信息" value="@ViewBag.PartPlan.pp_description" autocomplete="off" />
                                </div>
                            </div>


                            <div class="col-sm-3">
                                <div class="form-auto-lg">
                                    <label class="form-label"><span class="red">*</span>主制部门: </label>
                                    <input id="txtAdminOrgUnitID" class="form-control input-sm" placeholder="请输入主制部门" value="@ViewBag.PartPlan.pp_adminOrgUnitID" autocomplete="off" />
                                </div>
                            </div>
                        </div><!-- 第三行内容 -->

                        <div class="row">
                            <!-- 第四行内容 -->
                            <div class="col-sm-6">
                                <div class="form-auto-lg">
                                    <label class="form-label"><span class="red">&nbsp;</span>备注: </label>
                                    <input id="txtRemark" class="form-control input-sm" placeholder="请输入备注" value="@ViewBag.PartPlan.pp_remark" autocomplete="off" />
                                </div>
                            </div>
                            <div class="col-sm-3"> </div>
                            <div class="col-sm-3">
                                <div class="form-auto text-right">
                                    <button id="btnAdd" type="button" class="btn btn-primary btn-sm" style="display:none;">
                                        <i class="fa fa-plus"></i>
                                        生成
                                    </button>
                                    @*<a id="btnDel" class="btn btn-danger btn-sm" style="display:none;" onclick="DeleteData(@ViewBag.Plan.pp_guid)"><i class="fa fa-trash-o"></i>删除</a>*@
                                    <button id="btnSave" type="button" class="btn btn-primary btn-sm">
                                        <i class="fa fa-save"></i>
                                        保存
                                    </button>
                                    <a class="btn btn-success btn-sm" href="/Plan/PartPlanList"><i class="fa fa-reply"></i>后退</a>
                                </div>
                            </div>
                        </div><!-- 第四行内容 -->
                    </form>
                </div>

                <!--Table-->
                <div id="divMainList" class="table" style="display:none;">
                    <table id="tbMainList" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>产品编号</th>
                                <th>当前区域</th>
                                <th>当前工位</th>
                                <th>状态</th>
                            </tr>
                        </thead>
                    </table>
                </div>
                <!--Table End-->
            </div>
        </div>
    </div>
</div>

